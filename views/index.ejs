<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Blog Website</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Blog Website</h1>
        </div>

        <div class="posts">
            <% posts.forEach(post => { %>
                <div class="post">
                    <h2><%= post.title %></h2>
                    <p><%= post.content.substring(0, 100) %>...</p>
                    <a href="/posts/<%= post._id %>">Read More</a>
                </div>
            <% }); %>
        </div>

        <a href="/compose" class="btn">Compose</a>
    </div>
</body>
</html>
